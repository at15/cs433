<configuration>
    <property>
        <name>fs.defaultFS</name>
        <!-- support connect to hdfs from remote, ie:hadoop runs in vagrant, upload data from host windows machine -->
        <value>hdfs://0.0.0.0:9000</value>
    </property>
    <property>
        <name>hadoop.tmp.dir</name>
        <value>/home/vagrant/tmp/hadoop/hadoop-${user.name}</value>
    </property>
</configuration>